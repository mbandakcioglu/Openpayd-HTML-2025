extends  ../layouts/layout

block variables
	-var pageType = ""
	-var pageTitle = "Accept Payments"
	//- SEO
	-var desc = "Accept Payments"
	-var keywords = "Home,Page"
	-var pageRole = "home"

block content
	include ../mixins/product-slider.pug
	include ../components/faq.pug

	div(class="mt-[197px] mb-[42px]")
		.container.w-full.mx-auto.grid.grid-row-12(class="max-w-[" + siteWidth + "] pt-[32px] px-[5px]")
			.breadcrumb Products > #[strong Accept Payments]
	

	+poductHero({
		title: "MANAGE EVERY INCOMING PAYMENT",
		summary: "Receive payments without the pain, using OpenPayd’s universal infrastructure.",
		link1: {
			url: "/contact-us/",
			text: "DEMO",
		},
		link2: {
			url: "https://sandbox.openpayd.com/account/login",
			text: "SANDBOX",
			target: "_blank"
		}
	})


	section.text-image-box(class="pb-[132px] pt-[166px]")
		.container.w-full.mx-auto(class="max-w-[" + siteWidth + "] xl:grid xl:grid-cols-12")
			div(class="xl:col-span-5 space-y-[46px ]")
				h2(class="font-black leading-[69px] text-[54px]") Receive payments from anywhere
				p OpenPayd offers a truly global payment solution, with the ability to receive payments across every major currency into a single IBAN. Our rails-agnostic approach combines traditional finance with blockchain technology under one API, ensuring instants, secure transactions all over the world.
			div(class="xl:col-span-6 xl:col-start-7")
				figure(class="p-[42px] pt-0") 
					img(src="/src/images/accepting-payments.png", alt="Receive payments from anywhere")

	section.dark-bg-product-content.overflow-hidden(class="w-full bg-[linear-gradient(to_left,rgb(0,18,68)_0%,rgb(0,18,68)_50%,white_50%,white_100%)]")
		.container.w-full.mx-auto(class="xl:grid xl:grid-cols-12 bg-openpayd-dark-blue max-w-[" + siteWidth + "] pb-[93px] pt-[116px] px-[5px] xl:rounded-tl-[125px]")

			div(class="xl:col-span-11 xl:col-start-2 p-[15px] xl:p-0")
				h2.text-white.font-black(class="xl:text-[72px]") Every Pay-In, managed your way
			div(class="col-span-4 col-start-2 text-lg text-white space-y-[38px] p-[15px] xl:p-0")
				
				-

					var darkBgContent = [
						{
							title: "Unlock real-time payment rails",
							summary: "Make payments faster than ever",
							text: "Never wait for a payment to reach your account again, with our access to real-time traditional and blockchain payment rails."
						},
						{
							title: "Harness every major currency",
							summary: "All in one place",
							text: "Global regulatory coverage and multi-currency accounts enable you to receive all major currencies, stablecoins and major digital assets such as BTC and ETH."
						},
						{
							title: "Reconcile on arrival",
							summary: "Streamlining your operations",
							text: "Virtual IBANs enable you to automatically reconcile every incoming payment as it arrives. Chase growth, not funds."
						},
					]
				
				each dbc in darkBgContent
					h3.font-bold.text-4xl= dbc.title
					h4.font-bold.text-2xl.text-openpayd-blue= dbc.summary
					p.text-lg= dbc.text

			
			div.col-start-7.col-span-5.text-white(class="xl:mt-[247px] ml-[15px] xl:ml-0")
				-
					var productSliderContent = [
						{
							img: "OP-Icon-Pay-In-Review-Aura.svg",
							title: "Via API",
							desc: "Our developer-friendly API is built for scale. Keep track of every incoming payment with our dedicated suite of API calls.",
							button: {
								text: "DIVE IN",
								url: "#"
							}
						},
						{
							img: "OP-Icon-Sub-Accounts-Aura.svg",
							title: "Through our platform",
							desc: "See all your incoming payments in one place in the OpenPayd platform. Then track, filter and export all the information you need.",
							button: {
								text: "SANDBOX",
								url: "#",
							}
						},
						{
							img: "OP-Icon-Pay-In-Review-Aura.svg",
							title: "Via API",
							desc: "Our developer-friendly API is built for scale. Keep track of every incoming payment with our dedicated suite of API calls.",
							button: {
								text: "DIVE IN",
								url: "#"
							}
						},
						{
							img: "OP-Icon-Sub-Accounts-Aura.svg",
							title: "Through our platform",
							desc: "See all your incoming payments in one place in the OpenPayd platform. Then track, filter and export all the information you need.",
							button: {
								text: "SANDBOX",
								url: "#",
							}
						}

					]
				+productSlider(productSliderContent)


	

	section.trio-box.w-full
		.container.mx-auto(class="max-w-[" + siteWidth + "] py-[151px] xl:grid xl:grid-cols-12 space-y-[64px]")

			h2(class="font-black xl:text-[54px] xl:leading-[69px] xl:col-span-10 xl:col-start-2 text-center") Your new account infrastructure

			p.summary(class="xl:col-span-10 xl:col-start-2 text-center xl:text-2xl") Build a little or build a lot. Our payments and banking infrastructure is ready for whatever you need:
			-
				var trioContent = [
					{
						img: "/OP-Icon-Master-Accounts-Aura.svg",
						title: "Master Account",
						text: "Open a Master account (also known as a pooled account), in Euro or GBP."
					},
					{
						img: "/OP-Icon-Sub-Accounts-Aura.svg",
						title: "Sub Accounts",
						text: "Start issuing sub-accounts (also called linked accounts) and virtual IBANs for your underlying users or customers."
					},
					{
						img: "/OP-Icon-FX-Aura.svg",
						title: "Multi-Currency",
						text: "Combine with our multi-currency account infrastructure and pay-out functionality to super-charge your global presence."
					},
				]
			div(class="xl:col-span-10 xl:col-start-2 xl:grid xl: xl:grid-cols-9 xl:gap-5")
				each item in trioContent
					div(class="col-span-3 text-center space-y-[24px]") 
						img(class="inline-block size-[72px]", src="/src/images" + item.img, alt= item.title)
						h3(class="text-2xl")= item.title
						p= item.text


	section.w-full(class="")
		.container.mx-auto(class="max-w-[" + siteWidth + "] py-[151px] xl:grid xl:grid-cols-12")
			div(class="xl:col-span-6 xl:col-start-1")
				img.w-full(src="/src/images/code-box.png", alt="6 data points: all it takes to initiate international payouts")
			div(class="xl:col-span-5 xl:col-start-8 xl:space-y-[48px] text-lg")
				h2(class="font-black xl:text-[54px] xl:leading-[69px]") 6 data points: all it takes to initiate international payouts
				p Does a payment infrastructure that can make payments in dozens of currencies, many of which in real-time, sound too complex?
				p Not at all. All it takes is one API call with six required parameters: Account ID, beneficiary ID, payment type and value, reference and date.
					br
					| That’s it, now watch that payment go.
				.flex.gap-8
					+buttonNonBorder({
						url: "#", 
						text: "DISCOVER vIBANs", 
						classes: "bg-openpayd-blue hover:bg-linear-[90deg,#E348FF_0%,#B514F7_30%,#625BFB_70%,#00CCFF_100%] hover:text-white"
					})
					+ButtonAuraBorder({
						url: "#", 
						text: "SANDBOX", 
						classes:"text-black"
					})


	//Right Image Content
	section(class="")
		.container.w-full.mx-auto(class="max-w-[" + siteWidth + "] xl:px-0 px-[15px] py-[151px] xl:grid xl:grid-cols-12")
			div(class="xl:col-span-5 xl:col-start-1 xl:space-y-[48px] space-y-[24px] text-lg mb-[50px]")
				h2(class="font-black xl:text-[54px] xl:leading-[69px]") Open virtual accounts with 13 lines of code
				p Simple, but effective. That’s our philosophy behind every API call.
					br
					| Generate an account for a linked client with just two required parameters 

				p (“Currency” and a “friendlyName” for the account) and three optional ones. That’s all it takes to issue vIBANs like a pro.

				p Ready to explore using our API in your environment? Get started with our Sandbox today.
				.flex.gap-8
					+buttonNonBorder({
						url: "#", 
						text: "SANDBOX", 
						classes: "bg-openpayd-blue hover:bg-linear-[90deg,#E348FF_0%,#B514F7_30%,#625BFB_70%,#00CCFF_100%] hover:text-white"
					})
					+ButtonAuraBorder({
						url: "#", 
						text: "DISCOVER vIBANs", 
						classes:"text-black"
					})
			div(class="xl:col-span-6 xl:col-start-7")
				img.w-full(src="/src/images/code-boxx.png", alt="6 data points: all it takes to initiate international payouts")


	include ../components/products-gateway.pug


	-
		var faq = [
			{ 
				no: '01', 
				q: 'Alright, but what exactly do you do?', 
				a: 'As a creative agency we work with you to develop solutions to address your brand needs. That includes various aspects of brand planning and strategy, marketing and design.' 
			},
			{ 
				no: '02', 
				q: 'I don’t need a brand strategist but I need help executing an upcoming campaign. Can we still work together?', 
				a: 'Yes! We can collaborate based on your needs.' 
			},
			{ 
				no: '03', 
				q: 'Are your rates competitive?', 
				a: 'We offer rates that reflect the quality and efficiency of our services.'
			},
			{ 
				no: '04', 
				q: 'Why do you have a monthly project cap?', 
				a: 'To ensure every project receives the attention it deserves.' 
			}
		]

	+Faq(faq)