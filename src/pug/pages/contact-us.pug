extends  ../layouts/layout

block variables
	-var pageType = ""
	-var pageTitle = "Get in touch"
	//- SEO
	-var desc = "Get in touch"
	-var keywords = "Home,Page"
	-var pageRole = "home"
	-var ShowOnlyGateways = true


block content
	include ../components/faq.pug

	+breadcrumb(["Company", "Contact"])


	+onlyTextHero("Get in touch")


	section(class="md:rounded-t-full  rounded-t-[65px] overflow-hidden")
		img(class="h-auto w-full hidden md:block", src="/src/images/general-thin-cover.png", alt= pageTitle)
		img(class="h-auto w-full md:hidden", src="/src/images/general-bold-cover.png", alt= pageTitle)

	
	section(class="py-20")
		.container.w-full.mx-auto(class="max-w-[" + siteWidth + "] space-y-[54px] px-6 md:px-0 flex flex-col md:flex-row justify-center md:gap-[85px]")
			div(class="md:w-1/3 space-y-12") 
				h2(class="text-[42px] font-black") Move and manage money globally
				p(class="text-lg") Contact our team today to talk through your company's needs.
			div(class="md:w-1/2")
				include ../components/cta-form.pug