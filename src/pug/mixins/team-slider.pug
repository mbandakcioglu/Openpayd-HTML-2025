mixin teamSlider(p)
	#team-slider.swiper
		.swiper-wrapper
			.swiper-slide(class="w-1/3!")
				//- outreAuraBorder(src, altText,  classes)
				+outreAuraBorder("/ozan-ozerk.png", "Ozan Özerk", "" , imgClass = "bg-openpayd-dark-blue")
				.name Dr Ozan Özerk
				.title Founder
				a.more(class="button aura-hover-text mt-auto content-center flex font-bold gap-2.5 text-openpayd-blue", href="#") 
					span Explore
					img(class="inline-block", src="/src/images/link-arow.svg", alt="SEE MORE")
			.swiper-slide(class="w-1/3") 2
			.swiper-slide(class="w-1/3") 3
			.swiper-slide(class="w-1/3") 4
			.swiper-slide(class="w-1/3") 5
			.swiper-slide(class="w-1/3") 6

