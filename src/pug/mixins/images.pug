mixin outreAuraBorder(src, altText, classes, bgClass = "bg-white")
	figure.relative(class= classes ? classes : null)
		div.relative(class="z-1 overflow-hidden w-full rounded-[20px]")
			//- img(class="w-full h-auto object-cover", src="/src/images" + src, alt= altText)
			img(
				class="w-full h-auto object-cover",
				src=( (typeof src === 'string' && src.startsWith("https://")) ? src : "/src/images" + src ),
				alt= altText
			)
		div.absolute(class="w-full h-full z-0 rounded-[20px] md:rounded-[24px] p-[2px] md:left-[24px] left-[12px] md:top-[24px] top-[24px] bg-gradient-to-r from-[#C125DD] to-[#0099F7]")
			div(class="w-full h-full rounded-[20px] md:rounded-[22px] " + bgClass  )