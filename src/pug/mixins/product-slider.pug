mixin productSlider(p)

	#products-slider.swiper(class="md:w-[60vw] w-3/4 md:pe-5 ml-0! md:overflow-hidden! overflow-visible!")
		.swiper-wrapper(class="")
			each p in productSliderContent
				.swiper-slide(class="md:w-1/3!")
					.gradient-border-2(class="md:p-[50px] p-[41px] h-full text-white flex flex-col items-start")
						img(class="mb-[18px] size-[64px]", src=`/src/images/${p.img}`, alt= p.title)
						div(class="mb-[18px] text-2xl font-bold")= p.title
						div(class="text-lg mb-5")= p.desc
						if p.button
							+buttonNonBorder({
								url: p.button.url,
								text: p.button.text,
								classes: "bg-openpayd-blue hover:bg-linear-[90deg,#E348FF_0%,#B514F7_30%,#625BFB_70%,#00CCFF_100%] hover:text-white mt-[46px] mt-auto",
								target:"",
								rel:""
							})
			if p.length > 2
				.swiper-slide(class="md:w-1/3!")
	