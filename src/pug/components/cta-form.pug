mixin customCheckbox(c)
	//- div.customCheckbox(class=c.containerClassName && c.containerClassName)
		label(for=c.id)
			input(id=c.id, type=c.type, name=c.name, value="1", data-rule-required=c.required && "true", class=c.inputClassName && c.inputClassName)
			span
			span.text!= c.labelText
	div(class=`${c.containerClassName || ''} space-y-4`)
		label(for=c.id class="flex items-start gap-2 text-sm font-normal cursor-pointer")
			input(
				type="checkbox",
				id=c.id,
				name=c.name,
				value="1",
				data-required= c.required && "true",
				class=`peer hidden ${c.inputClassName || ''}`
			)
			- const isRadio = c.containerClassName && c.containerClassName.includes('radio')
			span(
				class=[
					"w-5",
					"h-5",
					"min-w-[20px]",
					"border",
					"border-blue",
					"bg-blue",
					"flex",
					"justify-center",
					"items-center",
					"peer-checked:bg-openpayd-dark-blue",
					"peer-checked:shadow-[inset_0_0_0_2px_white]",
					"transition",
					isRadio ? "rounded-full" : "rounded"
				].join(" ")
			)
			span.text(class="leading-5") !{c.labelText}

