include ../mixins/Accoridon.pug
mixin Faq(faq, border=true, title=true)
	section.faq.w-full(class="py-20")
		//- .container.mx-auto(class="max-w-[" + siteWidth + "] px-[15px] md:px-0 py-[151px]")
		.container.mx-auto(class="max-w-[" + siteWidth + "]  px-6 md:px-0")
			if title
				div(class="col-span-12 md:text-center mb-[64px] md:space-y-12 space-y-6")
					h2(class="font-black md:text-[54px] text-[32px] md:leading-[69px]") FAQ
					p Answered by our Experts
			if border
				div.gradient-border-2(class="col-span-12 md:grid md:grid-cols-12 md:grid-rows-1 gap-4 md:py-[86px] md:px-[74px]")
					div(class="col-span-10 col-start-2")
						+Accordion(faq)
			else 
				+Accordion(faq)
