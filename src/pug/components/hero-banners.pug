mixin onlyTextHero(title)
	section#sub-hero-banner(class="w-full")
		.container.w-full.mx-auto.grid.grid-cols-12(class="max-w-[" + siteWidth + "] pb-[72px] pt-[65px] px-[5px] rounded-tr-[125px]")
			h1(class="xl:text-[96px] xl:leading-[110px] xl:font-black text-opanpayd-dark-blue")= title