		.container.w-full.mx-auto(class="md:grid grid-cols-1bg-[url(/src/images/OP_Aura_graphic_RGB_1.png)] bg-no-repeat bg-position-[110px_-356px] bg-openpayd-light-blue max-w-[" + siteWidth + "] pb-[93px] pt-[116px] md:rounded-tr-[125px] px-6 md:px-0")
