		.container.w-full.mx-auto.grid.grid-cols-12(class="bg-[url(/src/images/OP_Aura_graphic_RGB_1.png)] bg-no-repeat bg-position-[80px_-320px] bg-openpayd-light-blue max-w-[" + siteWidth + "] pb-[93px] pt-[116px] px-[5px] rounded-tr-[125px]")
			div(class="col-span-10 rounded-tr-lg space-y-[36px] text-black")
				h1(class="xl:text-[96px] xl:leading-[110px] xl:font-black text-opanpayd-violet")= d.title
				p= d.summary
				.flex.gap-8
					+buttonNonBorder({
						url: d.link1.url, 
						text: d.link1.text, 
